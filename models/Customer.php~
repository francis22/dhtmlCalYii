<?php

/**
 * This is the model class for table "{{customer}}".
 *
 * The followings are the available columns in table '{{customer}}':
 * @property string $id
 * @property string $name
 * @property string $surnames
 * @property string $street
 * @property integer $city
 * @property integer $pincode
 * @property integer $state
 * @property string $country
 * @property string $dob
 * @property integer $stauts
 */
class Customer extends CActiveRecord
{
	/**
	 * Returns the static model of the specified AR class.
	 * @param string $className active record class name.
	 * @return Customer the static model class
	 */
	public static function model($className=__CLASS__)
	{
		return parent::model($className);
	}

	/**
	 * @return string the associated database table name
	 */
	public function tableName()
	{
		return '{{customer}}';
	}

	/**
	 * @return array validation rules for model attributes.
	 */
	public function rules()
	{
		// NOTE: you should only define rules for those attributes that
		// will receive user inputs.
		return array(
			array('name, surnames, street, city, pincode, state, country, dob', 'required'),
			array('stauts', 'numerical', 'integerOnly'=>true),
			array('name, surnames, country', 'length', 'max'=>25),
			array('street', 'length', 'max'=>50),
			// The following rule is used by search().
			// Please remove those attributes that should not be searched.
			array('id, name, surnames, street, city, pincode, state, country, dob, stauts', 'safe', 'on'=>'search'),
		);
	}

	/**
	 * @return array relational rules.
	 */
	public function relations()
	{
		// NOTE: you may need to adjust the relation name and the related
		// class name for the relations automatically generated below.
//		Yii::import('application.modules.dhtmlCalYii.models.*');

		return array(
		'event'=>array(self::HAS_MANY,'Events','customer'),

		);
	}

	/**
	 * @return array customized attribute labels (name=>label)
	 */
	public function attributeLabels()
	{
		return array(
			'id' => 'ID',
			'name' => 'Name',
			'surnames' => 'Surnames',
			'street' => 'Street',
			'city' => 'City',
			'pincode' => 'Pincode',
			'state' => 'State',
			'country' => 'Country',
			'dob' => 'Dob',
			'stauts' => 'Stauts',
		);
	}

	/**
	 * Retrieves a list of models based on the current search/filter conditions.
	 * @return CActiveDataProvider the data provider that can return the models based on the search/filter conditions.
	 */
	public function search()
	{
		// Warning: Please modify the following code to remove attributes that
		// should not be searched.

		$criteria=new CDbCriteria;

		$criteria->compare('id',$this->id,true);
		$criteria->compare('name',$this->name,true);
		$criteria->compare('surnames',$this->surnames,true);
		$criteria->compare('street',$this->street,true);
		$criteria->compare('city',$this->city);
		$criteria->compare('pincode',$this->pincode);
		$criteria->compare('state',$this->state);
		$criteria->compare('country',$this->country,true);
		$criteria->compare('dob',$this->dob,true);
		$criteria->compare('stauts',$this->stauts);

		return new CActiveDataProvider($this, array(
			'criteria'=>$criteria,
		));
	}
}
